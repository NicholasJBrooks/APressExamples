@model IEnumerable<Product>

    @{
        ViewBag.Tittle = "Working With Visual Studio";
    }
    <h3>Products</h3>
    <table>
        <thead>
            <tr><th>Name</th><th>Price</th></tr>
        </thead>
        <tbody>
            @foreach (Product product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@($"{product.Price:c2}")</td>
                </tr>
            }
        </tbody>
    </table>
