@model Product[]

@{
    ViewBag.Tittle = "Product Name";
}
<table>
    <thead>
        <tr><th>Name</th><th>Price</th></tr>
    </thead>
    <tbody>
        @foreach (Product product in Model)
        {
        <tr>
            <td>@product.Name</td>
            <td>@($"{product.Price:c2}")</td>
        </tr>
        }

    </tbody>foreach
</table>


